<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--    Status bar color(Using accompanist). -->
        <!--        <item name="android:statusBarColor" >@android:color/transparent</item>-->
        <!--        <item name="android:navigationBarColor" >@android:color/transparent</item>-->
    </style>

    <style name="Theme.Weather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Weather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Weather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Weather.Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
<!--        <item name="windowSplashScreenIconBackgroundColor">@drawable/ic_launcher_background</item>-->
        <item name="postSplashScreenTheme">@style/Theme.Weather.NoActionBar</item>
    </style>
</resources>